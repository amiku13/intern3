<p id="notice"><%= notice %></p>

<h1>タスク一覧よ！</h1>

<table>
  <thead>
    <tr>
      <th>コンテンツ一覧よ！</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.content %></td>
        <td><%= link_to '確認する', task %></td>
        <td><%= link_to '修正する', edit_task_path(task) %></td>
        <td><%= link_to '削除する', task, method: :delete, data: { confirm: '消しちゃうの…？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しくタスクを作る！', new_task_path %>
